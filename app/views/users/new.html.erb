<h1>Signup</h1>
<%= form_for @user, :html => {:multipart => true} do |f| %>
<%= f.error_messages %>
<div class="field">
  <%= f.label :first_name%>
  <%= f.text_field :first_name %>
</div>
<div class="field">
  <%= f.label :last_name%>
  <%= f.text_field :last_name %>
</div>
<div class="field">
  <%= f.label :login %>
  <%= f.text_field :login %>
</div>
<div class="field">
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>
<div class="field">
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
</div>
<div class="field">
  <%= f.label :postal_address %>
  <%= f.text_field :postal_address %>
</div>

<div class="field">
  <%= f.label :city %>
  <%= f.text_field :city %>
</div>
<div class="field">
  <%= f.label :state %>
  <%= f.text_field :state %>
</div>
<div class="field">
  <%= f.label :country %>
  <%= f.text_field :country %>
</div>

<div class="field">
  <%= f.label :pincode %>
  <%= f.text_field :pincode %>
</div>
<div class="field">
  <%= f.label :phone %>
  <%= f.text_field :phone %>
</div>
<div class="field">
  <%= f.label :photo %>
  <%= f.file_field :photo %>
</div>
<div class="actions">
  <%= f.submit "Register" %>
</div>
<% end %>

