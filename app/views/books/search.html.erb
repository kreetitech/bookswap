
<h1>Search Result</h1>
<table>
  <tr>
    <th>BookTitle</th>
    <th>Author</th>
    <th>Description</th>
    <th>Language</th>
    <th>ISBN</th>
    <th>Bookcondition</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag(book.photo.url(:thumb)) %></td>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.description %></td>
    <td><%= book.language %></td>
    <td><%= book.isbn %></td>
    <td><%= book.condition %></td>
    </tr>
<% end %>
</table>



