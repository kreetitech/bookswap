<h1>Listing Of all Books</h1>

<table>
  <tr>
    <th>BookTitle<th>
    <th>Author</th>
    <th>Description</th>
    <th>Language</th>
    <th>ISBN</th>
    <th>Bookcondition</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.description %></td>
    <td><%= book.language %></td>
    <td><%= book.isbn %></td>
    <td><%= book.condition %></td>
    <td>
     <%= link_to 'Add to Wishlist',wishlists_path(:book_id => book.id), :method => :post %>
      </td>
    </tr>
    <% end %>
   </table>
